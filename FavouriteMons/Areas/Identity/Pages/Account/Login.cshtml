@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}

<div class="login-container">
  <div class="login-image">
    <img src="~/images/pokemon-bg.jpg" alt="Monster Image" />
  </div>
  <div class="login-form-container">
    <form id="account" method="post" class="login-form">
      <h2>Login</h2>
      <hr />
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email" class="form-label"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <div class="form-floating login-mt">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <label asp-for="Input.Password" class="form-label"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div class="checkbox login-mt">
        <label asp-for="Input.RememberMe" class="form-label">
          <input class="form-check-input" asp-for="Input.RememberMe" />
          @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
      </div>
      <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
      <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 btn btn-lg btn-success login-mt">Create an account</a>
      <div class="login-form-forgetpass login-mt">
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
