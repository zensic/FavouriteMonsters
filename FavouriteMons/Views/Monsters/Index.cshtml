@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container red">
    <div class="row
    row-cols-lg-4
    row-cols-md-2
    ">
        <a class="col pokemon" asp-controller="Monsters" asp-action="Create" style="
            justify-content: center;
            background-color: lightgreen;
            border: none
        ">
            Add
        </a>
        @foreach (var monster in ViewBag.monsters)
        {
        <div class="col pokemon">
            <img src="@monster["url"]"/>
            <div>
                <strong>@monster["name"]</strong>
            </div>
            <div style="background-color: @monster["color"]">@monster["element"]</div>
        </div>
        }

    </div>
</div>