@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
  <h2>Monsters</h2>
  <a class="btn btn-primary" asp-controller="Monsters" asp-action="Create">
    Create a monster
  </a>
</div>
<hr />

<div class="monsters-container">
  @foreach (var monster in ViewBag.monsters)
  {
    <div class="monster">
      <img src="@monster["url"]" />
      <div class="mt-1">
        <strong>@monster["name"]</strong>
      </div>
      <div class="monster-type mt-1" style="background-color: @monster["color"]">@monster["element"]</div>
    </div>
  }
</div>